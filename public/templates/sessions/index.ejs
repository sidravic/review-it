<h1> Login </h1>

<div class="login">
    <form action="/login" method="post">
        <input type="hidden" name="crumb" value="<%= crumb %>" />

        <div class="form-field">
            Email: <input type="text" name="email" />
        </div>

        <div class="form-field">
            Password: <input type="password" name="password" />
        </div>

        <input type="submit" name="Login" />
    </form>
</div>